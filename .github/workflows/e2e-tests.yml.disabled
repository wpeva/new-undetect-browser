name: E2E and Load Tests

on:
  push:
    branches:
      - main
      - develop
      - 'claude/**'
  pull_request:
    branches:
      - main
      - develop
  workflow_dispatch:
    inputs:
      run_load_tests:
        description: 'Run load tests'
        required: false
        default: 'false'

jobs:
  unit-tests:
    name: Unit Tests
    runs-on: ubuntu-latest
    timeout-minutes: 15

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'
          cache: 'npm'

      - name: Install dependencies
        run: npm ci

      - name: Run unit tests
        run: npm run test:unit

      - name: Upload coverage
        uses: codecov/codecov-action@v3
        if: always()
        with:
          files: ./coverage/lcov.info
          flags: unittests

  e2e-platform-tests:
    name: E2E Platform Tests
    runs-on: ubuntu-latest
    timeout-minutes: 30
    needs: unit-tests

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'
          cache: 'npm'

      - name: Install dependencies
        run: npm ci

      - name: Install Playwright browsers
        run: npx playwright install --with-deps chromium

      - name: Run E2E platform tests
        run: npm run test:e2e:platform
        env:
          API_BASE_URL: ${{ secrets.API_BASE_URL || 'http://localhost:3000' }}
          CI: true

      - name: Upload test results
        uses: actions/upload-artifact@v3
        if: always()
        with:
          name: e2e-platform-results
          path: |
            test-results/
            coverage/

  e2e-detection-tests:
    name: E2E Detection Tests
    runs-on: ubuntu-latest
    timeout-minutes: 45
    needs: unit-tests
    # Only run on main branch or manually
    if: github.ref == 'refs/heads/main' || github.event_name == 'workflow_dispatch'

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'
          cache: 'npm'

      - name: Install dependencies
        run: npm ci

      - name: Install Playwright browsers
        run: npx playwright install --with-deps chromium

      - name: Run E2E detection tests
        run: npm run test:e2e:detection
        env:
          API_BASE_URL: ${{ secrets.API_BASE_URL || 'http://localhost:3000' }}
          CI: true
        continue-on-error: true

      - name: Upload detection results
        uses: actions/upload-artifact@v3
        if: always()
        with:
          name: e2e-detection-results
          path: |
            test-results/
            detection-report.json

  e2e-performance-tests:
    name: E2E Performance Tests
    runs-on: ubuntu-latest
    timeout-minutes: 30
    needs: unit-tests

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'
          cache: 'npm'

      - name: Install dependencies
        run: npm ci

      - name: Run performance tests
        run: npm run test:e2e:performance
        env:
          API_BASE_URL: ${{ secrets.API_BASE_URL || 'http://localhost:3000' }}
          CI: true

      - name: Upload performance results
        uses: actions/upload-artifact@v3
        if: always()
        with:
          name: performance-results
          path: |
            test-results/
            performance-report.json

  load-tests-quick:
    name: Quick Load Test
    runs-on: ubuntu-latest
    timeout-minutes: 10
    needs: [unit-tests, e2e-platform-tests]

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup k6
        uses: grafana/setup-k6-action@v1

      - name: Run quick load test
        run: k6 run tests/load/quick-load-test.js
        env:
          API_BASE_URL: ${{ secrets.API_BASE_URL || 'http://localhost:3000' }}

      - name: Upload k6 results
        uses: actions/upload-artifact@v3
        if: always()
        with:
          name: k6-quick-results
          path: |
            summary.json
            summary.html

  load-tests-full:
    name: Full Load Test (1000+ VUs)
    runs-on: ubuntu-latest
    timeout-minutes: 60
    needs: [unit-tests, e2e-platform-tests]
    # Only run on main branch or when manually triggered
    if: github.ref == 'refs/heads/main' || github.event.inputs.run_load_tests == 'true'

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup k6
        uses: grafana/setup-k6-action@v1

      - name: Run full load test
        run: k6 run tests/load/stress-test.js
        env:
          API_BASE_URL: ${{ secrets.API_BASE_URL || 'http://localhost:3000' }}
        continue-on-error: true

      - name: Upload k6 results
        uses: actions/upload-artifact@v3
        if: always()
        with:
          name: k6-full-results
          path: |
            summary.json
            summary.html

      - name: Comment PR with results
        uses: actions/github-script@v7
        if: github.event_name == 'pull_request'
        with:
          script: |
            const fs = require('fs');
            const summary = JSON.parse(fs.readFileSync('summary.json', 'utf8'));

            const comment = `## ðŸ“Š Load Test Results

            | Metric | Value |
            |--------|-------|
            | Total Requests | ${summary.metrics.http_reqs.values.count} |
            | Failed Requests | ${(summary.metrics.http_req_failed.values.rate * 100).toFixed(2)}% |
            | Avg Response Time | ${summary.metrics.http_req_duration.values.avg.toFixed(2)}ms |
            | P95 Response Time | ${summary.metrics.http_req_duration.values['p(95)'].toFixed(2)}ms |

            Full results available in artifacts.
            `;

            github.rest.issues.createComment({
              issue_number: context.issue.number,
              owner: context.repo.owner,
              repo: context.repo.repo,
              body: comment
            });

  test-summary:
    name: Test Summary
    runs-on: ubuntu-latest
    needs: [unit-tests, e2e-platform-tests, e2e-performance-tests, load-tests-quick]
    if: always()

    steps:
      - name: Check test results
        run: |
          echo "## Test Results Summary" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "âœ… Unit Tests: ${{ needs.unit-tests.result }}" >> $GITHUB_STEP_SUMMARY
          echo "âœ… E2E Platform Tests: ${{ needs.e2e-platform-tests.result }}" >> $GITHUB_STEP_SUMMARY
          echo "âœ… E2E Performance Tests: ${{ needs.e2e-performance-tests.result }}" >> $GITHUB_STEP_SUMMARY
          echo "âœ… Quick Load Test: ${{ needs.load-tests-quick.result }}" >> $GITHUB_STEP_SUMMARY

      - name: Fail if required tests failed
        if: |
          needs.unit-tests.result != 'success' ||
          needs.e2e-platform-tests.result != 'success' ||
          needs.e2e-performance-tests.result != 'success'
        run: exit 1
