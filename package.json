{
  "name": "undetect-browser",
  "version": "1.0.0",
  "description": "Advanced anti-detection browser based on Chromium with comprehensive stealth capabilities",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "build:clean": "rm -rf dist && npm run build",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:detection": "jest --testPathPattern=detection",
    "test:unit": "jest --testPathPattern=unit",
    "test:unit:new": "jest tests/unit/memoization.test.ts tests/unit/performance.test.ts",
    "test:integration": "jest --testPathPattern=integration",
    "test:coverage": "jest --coverage --collectCoverageFrom='src/**/*.ts'",
    "test:coverage:unit": "jest --coverage --testPathPattern=unit --collectCoverageFrom='src/**/*.ts'",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"examples/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"examples/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint && npm run test:unit:new",
    "prepare": "npm run build",
    "prepublishOnly": "npm run validate && npm run build:clean",
    "precommit": "npm run lint:fix && npm run format",
    "ci": "npm run validate && npm run test:ci"
  },
  "keywords": [
    "browser",
    "automation",
    "puppeteer",
    "playwright",
    "stealth",
    "anti-detection",
    "fingerprint",
    "undetectable",
    "bot",
    "scraping",
    "testing"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "puppeteer": "^21.6.1",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "playwright": "^1.40.1",
    "playwright-extra": "^4.3.6",
    "chrome-launcher": "^1.1.0",
    "proxy-chain": "^2.4.0",
    "tough-cookie": "^4.1.3",
    "user-agents": "^1.1.0",
    "fingerprint-generator": "^2.1.0",
    "faker": "^5.5.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/jest": "^29.5.11",
    "@types/tough-cookie": "^4.0.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
