{
  "compilerOptions": {
    // Language & Environment
    "target": "ES2022",
    "lib": ["ES2022", "ES2023", "DOM", "DOM.Iterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",

    // Output
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true, // Remove comments in production builds
    "importHelpers": true, // Use tslib for helpers to reduce bundle size

    // Type Checking (more strict for better code quality)
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    // Additional Checks
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": false,

    // Module Resolution
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,

    // Emit
    "skipLibCheck": true, // Skip type checking of declaration files for faster builds
    "allowJs": false,

    // Performance & Build
    "incremental": true, // Enable incremental compilation
    "tsBuildInfoFile": "./dist/.tsbuildinfo", // Store incremental info
    "isolatedModules": true, // Ensure each file can be safely transpiled
    "preserveConstEnums": false, // Don't preserve const enums for smaller builds

    // Advanced
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // Type Roots
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": [
    "src/**/*",
    "server/**/*",
    "cloud/**/*",
    "ml/**/*",
    "ml-profiles/**/*",
    "optimization/**/*",
    "security/**/*",
    "analytics/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "tests",
    "frontend",
    "electron",
    "examples",
    "chromium",
    "docker",
    "kubernetes",
    "monitoring",
    "testing",
    "virtualization",
    "benchmarks",
    "web",
    "*.md"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
